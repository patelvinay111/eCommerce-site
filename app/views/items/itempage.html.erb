                                            <%=@item.user.firstname %><br>
											<%=@item.user.lastname %>
                                        </div>
                                        <div class="profile-usertitle-job">
                                            <div class="rating">
											<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
											</div>
                                        </div>
                                    </div>
                                    <div class="profile-userbuttons">
                                        <button class="btn btn-success btn-sm" type="button">Follow</button> <button class="btn btn-danger btn-sm" type="button"><%= link_to "Message" ,  mailbox_inbox_path(@item.user, :id=>@item.user.id), :class=>'link-hover-color' ,:style => "color: #FFFFFF;"  %></button>
                                    </div>
                                </div>
                            </div>
                        </div><%end %>
                        <div class="col-md-12">
                            <div class="product-title">
                                <h2><%= @item.name%></h2>
                            </div>
                            <div class="product-desc"></div>
                            <div class="product-rating">
                                <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i>
                            </div>
                            <hr>
                            <div class="product-price">
                                <%= @item.price%>
                            </div>
                            <div class="product-stock">
                                In Stock
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
