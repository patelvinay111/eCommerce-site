        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button aria-controls="navbar" aria-expanded="false" class="navbar-toggle collapsed" data-target="#navbar" data-toggle="collapse" type="button"><span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span></button> <%= link_to 'ShopSJSU', root_path , :class=>'navbar-brand', :id=>'linkcolor'%>
                </div>
                <div class="navbar-collapse collapse" id="navbar">
                    <div class="navbar-form navbar-right">
                        <div class="text-of-email">
                            <%if current_user.present? %><%= link_to current_user.email , users_dashboard_path ,:class=>'link-hover-color'%><%end %>
